---
import type { Project } from "./Projects.astro";

type Props = {
	project: Project;
};

const { project } = Astro.props;
---

<div
	class="project-item grid scale-100 grid-rows-[max-content_1fr] transition-transform duration-400 hover:scale-105 md:grid-rows-1"
>
	<div class="thumbnail">
		<img src={project.img.src} alt={project.img.alt} class="aspect-[5_/_3] rounded-md object-cover shadow-lg" />
	</div>
	<div class="info mt-4 flex flex-col justify-center md:mt-0">
		<h3 class="headline mb-3 text-2xl">
			{project.blogpost ? <a href={`/blog/${project.blogpost}`}>{project.name}</a> : project.name}
		</h3>
		<div class="links flex gap-4">
			{
				project.github && (
					<a href={project.github} target="_blank" rel="noopener noreferrer">
						<i class="fa-brands fa-github" aria-hidden="true" aria-hidden="true" />
						<span class="underline">View code</span>
					</a>
				)
			}
			{
				project.site && (
					<a href={project.site} target="_blank" rel="noopener noreferrer">
						<i class="fa-solid fa-link" aria-label="Live site" />
						<span class="underline">Live demo</span>
					</a>
				)
			}
		</div>
		<p class="mt-3">{project.desc}</p>
		<ul class="technologies mt-4 flex flex-wrap gap-3" aria-label="Technologies list">
			{project.skills.map((skill) => <li class="pill rounded-2xl bg-[#d1d1d1] px-4 py-1 text-xs">{skill}</li>)}
		</ul>
		{
			project.blogpost && (
				<a href={`/blog/${project.blogpost}`} class="read-more mt-5 self-center md:self-start ">
					Read more
				</a>
			)
		}
	</div>
</div>

<style lang="scss">
	.read-more {
		font-size: 0.85rem;
		padding: 0.3em 0.75em;
		display: block;
		border-radius: 3px;
		border: 1px solid #333;
		width: fit-content;
		&::after {
			content: "\f178";
			font-family: "Font Awesome 6 Free";
			font-weight: 900;
			margin-left: 5px;
		}
	}

	@media screen and (min-width: 48em) {
		.project-item {
			display: grid;
			grid-template-columns: 1.25fr 1fr;
			gap: 4rem;
		}

		.read-more {
			margin-top: 1.25rem;
		}
	}

